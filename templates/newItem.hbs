<h1>Add a magical item</h1>

<form>
  <div class="form-group">
    <label for="itemName">Item to be sold:</label>
    {{input id="itemName" class="form-control" value=itemName}}
  </div>

  <div class="form-group">
    <label for="owner">Current Owner:</label>
    {{input id="owner" class="form-control" value=owner}}
  </div>

  <div class="form-group">
    <label for="age">Age of Item:</label>
    {{input id="age" class="form-control" value=age}}
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    {{textarea id="description" class="form-control" rows="10" value=description}}
  </div>

  <div class="form-group">
    <label for="imageURL">Add an Image:</label>
    {{input id="imageURL" class="form-control" value=imageURL}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>

</form>
